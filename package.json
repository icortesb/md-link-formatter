{
  "name": "md-link-formatter",
  "displayName": "md-link-formatter",
  "description": "converts URLs into Markdown-formatted links or images automatically.",
  "version": "1.0.0",
  "publisher": "IvanCortes",
  "engines": {
    "vscode": "^1.103.0"
  },
  "author": "Iván Cortés Buenard",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdlinks.convertirLinks",
        "title": "Convert links automatically"
      },
      {
        "command": "mdlinks.convertirLinksConInput",
        "title": "Convert links with input"
      }
    ],
    "keybindings": [
      {
        "command": "mdlinks.convertirLinks",
        "key": "ctrl+alt+l",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "mdlinks.convertirLinksConInput",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icortesb/md-link-formatter"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
